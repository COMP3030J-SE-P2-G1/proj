<div class="size-full flex flex-col p-3">
    <header class="flex m-1 flex flex-col">
        <h1 class="text-3xl font-bold text-base-content">Electricity Usage Calculator</h1>
        <span class="text-base-content-shadow">Simply select appliances that are in-use and an estimation will be outputed instantly.</span>
    </header>
    <section class="overflow-auto flex-auto flex justify-center items-center">
        <div class="size-11/12 flex gap-2">
            <div class="rounded-2xl bg-base-200 basis-1/4 m-2 overflow-auto">
                <div id="sidebar-prompt" class="text-sm text-base-content-shadow flex justify-center">
                    <div class="my-3">
                        Select appliances to start estimation
                    </div>
                </div>
            </div>
            <div class="h-full overflow-auto basis-3/4 flex flex-col gap-2">
                <div class="basis-11/12 overflow-auto">
                    <table class="table table-xs urelative h-full overflow-auto table-auto">
                        <colgroup>
                            <col class="w-48" />
                            <col />
                            <col />
                        </colgroup>
                        <!-- head -->
                        <thead class="sticky top-0 bg-base-100 backdrop-blur bg-opacity-70 backdrop-blur shadow-sm">
                            <tr>
                                <th >Number</th>
                                <th>Item</th>
                                <th class="text-right">Price</th>
                            </tr>
                        </thead>
                        <tbody id="calc-table-body">
                        </tbody>
                    </table>
                </div>
                <div class="rounded-2xl basis-1/12 bg-base-200 shrink-0 min-h-12 flex p-2 items-center overflow-x-auto text-nowrap">
                    <div class="mx-1"> <input id="total-hours" class="bg-base-300 rounded p-0.5 w-20" type="number" min="0"> </div> hours
                    <span class="mx-1 font-bold">OR</span>
                    Average <div class="mx-1"> <input id="hours-per-day" class="bg-base-300 rounded p-0.5 w-20" type="number" min="0" max="24"> </div> hours every day, for total 
                    <div class="mx-1"> <input id="weeks" class="bg-base-300 rounded p-0.5 w-20" type="number"> </div> weeks
                    <div class="flex-auto"></div>
                    <button class="btn btn-sm bg-base-300">clac</button>
                </div>
            </div>
        </div>
    </section>
</div>
