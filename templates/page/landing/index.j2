{% from '/component/theme-controller.j2' import theme_controller %}
{% extends 'base.j2' %}

{% block links %}
    <!-- inter font -->
    <link rel="preconnect" href="https://rsms.me/">
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
    
    <link href="/static/css/main.css" rel="stylesheet">
    <script type="module" src="/static/js/main.ts"></script>
    <script type="module" src="/static/js/landing.ts"></script>
{% endblock %}

{% block additional_body_classes %} tracking-tight {% endblock %}

{% block body_inner %}
    <div class="drawer">
        <input id="drawer-controller" type="checkbox" class="drawer-toggle" />
        
        <div class="drawer-content">
            {% include '/page/landing/header.j2' %}
            {% include '/page/landing/body.j2' %}
        </div>
        
        <div class="drawer-side z-40">
            <!-- TODO -->
            <label for="drawer-controller" aria-label="close sidebar" class="drawer-overlay"></label>
            <ul class="menu p-4 w-80 min-h-full bg-base-200">
                <li>
                    {{ theme_controller("") }}
                </li>
                <li><a>{{ _tr("Sign In") }}</a></li>
                <li><a>{{ _tr("Sign Up") }}</a></li>
            </ul>
        </div>
    </div>
{% endblock %}

